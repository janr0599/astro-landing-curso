---
import features from "../../config/features.json";
---

<h1 class="text-center font-bold text-5xl my-10">Features</h1>

<div class="grid md:grid-cols-3 gap-4 p-4">
  {
    features.map((feature, i) => (
      <div
        class={`row-span-1 bg-[#312F53] rounded-xl p-4 ${
          i === 0 || i === 5 ? "md:col-span-2" : ""
        } ${i === 1 ? "md:row-span-2" : ""} text-b`}
      >
        <h2 class="text-2xl font-bold my-4">{feature.title}</h2>
        <p>{feature.description}</p>
      </div>
    ))
  }
</div>
