---
import projects from "../../config/projects.json";
---

<h2 class="text-5xl font-bold my-10 text-center">Projects</h2>

<section class="grid md:grid-cols-3 gap-4 p-4">
  {
    projects.map((project) => (
      <div class="bg-[#201f37] p-10 rounded-xl flex flex-col gap-8 max-md:text-center flex-1">
        <h2 class="text-2xl font-bold my-4">{project.title}</h2>
        <p class="flex-1">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 transition-colors w-1/2 rounded-xl max-md:m-auto">
          {" "}
          See website{" "}
        </button>
        <img src={project.image} class="w-64 m-auto flex-1" alt="" />
      </div>
    ))
  }
</section>
