---
import more from "../../config/more.json";
---

<section class="flex flex-col md:flex-row items-center pt-10">
  <div class="grid grid-cols-2 gap-x-20 md:gap-x-0 gap-y-10 md:gap-y-10 flex-1">
    {
      more.map((i) => (
        <article class="text-center flex flex-col gap-4">
          <img src={i.img} alt={i.alt} class="w-20 m-auto" />
          <p class="font-bold">{i.title}</p>
        </article>
      ))
    }
  </div>

  <div class="flex flex-1 flex-col gap-y-10 text-center py-20">
    <h2 class="text-5xl font-bold">Lorem ipsum dolor sit.</h2>
    <p class="text-3xl text-zinc-300">
      Lorem ipsum dolor sit, amet consectetur adipisicing elit. Fugiat, esse!
    </p>
  </div>
</section>
